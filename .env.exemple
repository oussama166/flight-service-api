# .env.example
# Copy this to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password

# JWT Configuration
JWT_PRIVATE_KEY_PATH=src/main/resources/certs/private.pem
JWT_PUBLIC_KEY_PATH=src/main/resources/certs/public.pem

# Server Configuration
SERVER_PORT=8080

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# API Keys
STRIPE_API_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
# S3 Configuration
AWS_B2_BUCKET_NAME=your_bucket_name
AWS_B2_ENDPOINT=your_endpoint
AWS_B2_REGION=your_region
AWS_B2_ACCESS_KEY=your_access_key
AWS_B2_SECRET_KEY=your_secret_key

# Environment
SPRING_PROFILES_ACTIVE=dev
LOG_LEVEL=INFO